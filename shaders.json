{
  "textures": {
    "substance_textures": {
      "type": "texture",
      "software": "Substance Painter",
      "parameters": {
        "diffuse": "basecolor",
        "specGain": "",
        "specRough": "roughness",
        "disp": "height",
        "bump": "height",
        "normal": "normal",
        "mask": ""
      }
    }
  },
  "shaders": {
    "aiStandard": {
      "type": "shader",
      "software": "Arnold 4.2.14.0",
      "default_shader_attrs": {
          "Ks": 0.1
      },
      "parameters": {
        "diffuse": {
          "attr": "color",
          "colorspace": "sRGB",
          "name_match": ["Diffuse", "diffuse", "BaseColor"]
        },
        "specGain": {
            "attr": "Ks",
            "channel": "r",
            "colorspace": "Raw"
        },
        "specColor": {
            "attr": "KsColor",
            "colorspace": "Raw",
            "name_match": ["Specular", "spec", "specular", "specColor"]
        },
        "specRough": {
            "attr": "specularRoughness",
            "channel": "r",
            "colorspace": "Raw",
            "name_match": ["Roughness"]
        },
        "normal": {
          "attr": "normalCamera",
          "normal": "True",
          "colorspace": "sRGB",
          "name_match": [
            "Normal"
          ],
          "shader_attrs": {
            "bumpDepth": 0.1
          }
        },
        "reflectance": {
            "attr": "Ksn",
            "channel": "r",
            "colorspace": "Raw",
            "name_match": ["Metalness"],
            "shader_attrs":{
                "specularDistribution": 1,
                "specularFresnel": 1
            }
        }
      }
    },
    "aiStandardSurface": {
          "type": "shader",
          "software": "mtoa 2.1.0.2",
          "default_shader_attrs": {
              "Ks": 0.1
          },
          "parameters": {
              "diffuse": {
                  "attr": "baseColor",
                  "colorspace": "sRGB",
                  "name_match": ["Diffuse", "diffuse", "BaseColor", "albedo"]
              },
              "specGain": {
                  "attr": "specular",
                  "channel": "r",
                  "colorspace": "Raw",
                  "name_match": ["SpecularColor", "specColor"]
              },
              "specColor": {
                  "attr": "specularColor",
                  "colorspace": "Raw",
                  "name_match": ["Specular", "spec", "specular", "specColor"]
              },
              "specRough": {
                  "attr": "specularRoughness",
                  "channel": "r",
                  "colorspace": "Raw",
                  "name_match": ["Roughness"]
              },
              "normal": {
                  "attr": "normalCamera",
                  "normal": "True",
                  "colorspace": "sRGB",
                  "name_match": ["Normal"],
                  "shader_attrs":{
                      "bumpDepth": 0.1
                  }
              },
              "metalness": {
                  "attr": "metalness",
                  "channel": "r",
                  "colorspace": "Raw",
                  "name_match": ["Metalness", "metalness"],
                  "shader_attrs": {
                  }
              }
          }
      },
    "redshift": {
      "type": "shader",
      "software": "redshift-3066",
      "default_shader_attrs": {
        "Ks": 0.1
      },
      "parameters": {
        "diffuse": {
          "attr": "0",
          "colorspace": "ACEScg",
          "name_match": ["Diffuse", "diffuse", "BaseColor", "albedo"]
        },
        "specGain": {
          "attr": "10",
          "channel": "r",
          "colorspace": "Raw",
          "name_match": ["SpecularColor", "specColor"]
        },
        "specColor": {
          "attr": "5",
          "colorspace": "Raw",
          "name_match": ["Specular", "spec", "specular", "specColor"]
        },
        "specRough": {
          "attr": "7",
          "channel": "r",
          "colorspace": "Raw",
          "name_match": ["Roughness", "rough"]
        },
        "normal": {
          "attr": "52",
          "normal": "True",
          "colorspace": "Raw",
          "name_match": ["Normal", "normal"],
          "shader_attrs":{
            "bumpDepth": 0.1
          }
        },
        "metalness": {
          "attr": "14",
          "channel": "r",
          "colorspace": "Raw",
          "name_match": ["Metalness", "metalness", "metal"],
          "shader_attrs": {
          }
        }
      }
    }
  }
}